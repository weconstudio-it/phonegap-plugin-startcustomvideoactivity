<RelativeLayout
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
android:background="#222222">

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="48dp"
    android:id="@+id/imageView"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:src="@drawable/header_smartphone"
    android:adjustViewBounds="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:scaleType="fitXY" />

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/imageViewBackWeb"
    android:src="@drawable/icon_mosaico_home"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="false"
    android:layout_alignBottom="@+id/imageView"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:cropToPadding="false"
    android:scaleType="fitEnd"
    android:layout_marginRight="16dp"
    android:clickable="true"
    android:layout_toRightOf="@+id/imageViewCamera2"
    android:padding="0dp" />

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/imageViewCamera2"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:src="@drawable/rsi_logo"
    android:layout_alignBottom="@+id/imageView"
    android:paddingLeft="4dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:clickable="true"
    android:padding="0dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="9dp"
    android:layout_marginBottom="9dp"/>

    <WebView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/webView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView" />

</RelativeLayout>